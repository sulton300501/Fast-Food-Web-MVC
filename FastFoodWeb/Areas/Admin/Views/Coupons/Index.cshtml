@model IEnumerable<FastFood.Models.Coupon>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinumumAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CouponPicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinumumAmount)
            </td>
            <td>
                    @{
                        var base64 = Convert.ToBase64String(item.CouponPicture);
                        var imgsrc = string.Format("data:image/jpg;base64 , {0}", base64);
                    }
                    <img src="@imgsrc" height="50" width="50" style="border-radius:1"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id= @item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = @item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = @item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
